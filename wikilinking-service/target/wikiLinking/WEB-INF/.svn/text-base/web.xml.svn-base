<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Wikipedia Linking Web Service</display-name>
  
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/application_context.xml</param-value>
  </context-param>

    
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <servlet>
	<servlet-name>wikiLinking</servlet-name>
	<servlet-class>edu.kit.aifb.wikilinking.WikiLinkingServlet</servlet-class>
  </servlet>
   <servlet-mapping>
	<servlet-name>wikiLinking</servlet-name>
	<url-pattern>/wikiLinking</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>wikiLinking</servlet-name>
	<url-pattern>/</url-pattern>
  </servlet-mapping>
  
</web-app>
